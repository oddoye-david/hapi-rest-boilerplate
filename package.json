{
  "name": "hapi-rest-boilerplate",
  "version": "1.0.0",
  "description": "Base Hapi REST API",
  "main": "dist/server.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oddoye-david/hapi-rest-boilerplate.git"
  },
  "scripts": {
    "start": "yarn run compile && node dist/server.js",
    "dev": "NODE_ENV='development' nodemon --watch src --exec yarn start",
    "test": "yarn run compile && NODE_ENV='testing' babel-tape-runner tests/**/*.js | tap-spec",
    "compile": "babel --out-dir dist src",
    "prepublish": "yarn run compile",
    "postinstall": "yarn run compile",
    "lint": "eslint src"
  },
  "author": "David Oddoye <oddoyedavid@gmail.com>",
  "license": "MIT License",
  "dependencies": {
    "@v3rse/chroma": "^1.1.0",
    "bcrypt": "^1.0.2",
    "boom": "^4.3.1",
    "dotenv": "^4.0.0",
    "glob": "^7.1.2",
    "hapi": "^16.1.1",
    "hapi-auth-jwt2": "^7.2.4",
    "hapi-swagger": "^7.7.0",
    "inert": "^4.2.0",
    "joi": "^10.5.0",
    "joi-objectid": "^2.0.0",
    "jsonwebtoken": "^7.4.1",
    "mongoose": "^4.10.1",
    "vision": "^4.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "jest": "^20.0.4",
    "nodemon": "^1.11.0"
  }
}
